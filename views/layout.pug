doctype html
head
  base(href='/')
  meta(charset='utf-8')
  link(rel='apple-touch-icon' sizes='76x76' href='/img/apple-touch-icon.png')
  link(rel='icon' type='image/png' href='/img/mgmresorts.png')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  title MGM Identity Verification
  meta(name="description" content="Identity Verification for MGM Access")
  meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
  meta(meta name="mobile-web-app-capable" content="yes")
  link(rel="icon" sizes="192x192" href="/img/android-chrome-192x192.png")

  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="apple-mobile-web-app-status-bar-style" content="black")
  meta(name="apple-mobile-web-app-title" content="MGM Identity Verification")
  link(rel="apple-touch-icon-precomposed" href="/img/mgmresorts.png")

  link(rel="shortcut icon" href="/img/favicon-32x32.png")
  // Fonts and icons
  link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en")
  link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
